USRFLAGS  = -DUSBTESTMODE

# Set up the common make command for the ModelSim makefile with -m64 
# set as the architecture flag
COMMONCMD = $(MAKE) --no-print-directory USRFLAGS=${USRFLAGS} ARCHFLAG=-m64 -f makefile

#------------------------------------------------------
# BUILD RULES
#------------------------------------------------------

all:
	@$(COMMONCMD)

#------------------------------------------------------
# EXECUTION RULES
#------------------------------------------------------

sim:
	@$(COMMONCMD) sim

run:
	@$(COMMONCMD) run

rungui:
	@$(COMMONCMD) rungui
    
simgui:
	@$(COMMONCMD) simgui

help:
	@$(COMMONCMD) help

gui: rungui


clean:
	@$(COMMONCMD) clean